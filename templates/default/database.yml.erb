#
# PRODUCTION
#
production:
  adapter: <%= @adapter %>
  encoding: <%= @encoding %>
  database: <%= @database %>
  pool: <%= @pool %>
  username: <%= @username %>
  <% if @set_password %>
  password: <%= @password %>
  <% end %>
  <% if @host %>
  host: <%= @host %>
  <% end %>
  <%if @port %>
  port: <%= @port %>
  <% end %>

